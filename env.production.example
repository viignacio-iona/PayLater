# PayLater App - Production Environment Variables
# Copy this file to .env.local for local development
# Add these variables to Vercel dashboard for production

# Database Configuration
# For local development with PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/paylater_dev"
# For production (Vercel Postgres or external provider):
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# App Authentication
APP_PASSWORD="YourSecureProductionPassword123!"

# Next.js Configuration
NEXTAUTH_SECRET="your-super-secret-production-key-min-32-chars"
NEXTAUTH_URL="https://your-app-name.vercel.app"

# Optional: Analytics and Monitoring
# VERCEL_ANALYTICS_ID="your-analytics-id"
# SENTRY_DSN="your-sentry-dsn"
